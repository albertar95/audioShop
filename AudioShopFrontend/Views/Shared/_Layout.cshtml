    <script type="text/javascript">
        $(function () {
            $("#SearchBox").on('input', function () {
                $("#SearchBox1").val($("#SearchBox").val());
                if ($("#SearchBox").val().trim().length > 2)
                {
                    $.ajax({
                            url: '@Url.Action("SearchThis","Home")',
                            type: 'post',
                            datatype: 'json',
                            data: { Text: $("#SearchBox").val(), Nidcategory: $('#SearchCategory').find(":selected").val() },
                            success: function (result) {
                                if (result.HasValue) {
                                    $("#SearchContent").removeAttr('hidden');
                                    $("#SearchContent1").removeAttr('hidden');
                                    $("#SearchContent").html(result.Html);
                                    $("#SearchContent1").html(result.Html);
                                } else {
                                    $("#SearchContent").attr('hidden', 'hidden');
                                    $("#SearchContent1").attr('hidden', 'hidden');
                                }
                            },
                            error: function () { }
                        });
                } else {
                    if($("#SearchContent").is(":hidden") == false)
                    {
                        $("#SearchContent").attr('hidden', 'hidden');
                        $("#SearchContent1").attr('hidden', 'hidden');
                    }
                    
                }
            });
            $("#SearchBox1").on('input', function () {
                $("#SearchBox").val($("#SearchBox1").val());
                if ($("#SearchBox1").val().trim().length > 2) {
                    $.ajax({
                        url: '@Url.Action("SearchThis","Home")',
                        type: 'post',
                        datatype: 'json',
                        data: { Text: $("#SearchBox1").val(), Nidcategory: $('#SearchCategory1').find(":selected").val() },
                        success: function (result) {
                            if (result.HasValue) {
                                $("#SearchContent1").removeAttr('hidden');
                                $("#SearchContent1").html(result.Html);
                                $("#SearchContent").removeAttr('hidden');
                                $("#SearchContent").html(result.Html);
                            } else {
                                $("#SearchContent1").attr('hidden', 'hidden');
                                $("#SearchContent").attr('hidden', 'hidden');
                            }
                        },
                        error: function () { }
                    });
                } else {
                    if ($("#SearchContent1").is(":hidden") == false) {
                        $("#SearchContent1").attr('hidden', 'hidden');
                        $("#SearchContent").attr('hidden', 'hidden');
                    }

                }
            });
        });
    </script>
