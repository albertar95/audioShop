@model AudioShopBackend.Models.Product

@{
    ViewBag.Title = "AddProduct";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SubmitAddProduct", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "ProductForm" }))
{
    <div class="form-example-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:right;direction:rtl;">
                    <div class="form-element-list" id="divCategoryForm">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" placeholder="Product name" id="txtProductName">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" placeholder="Category" id="txtBrandName">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" placeholder="category brand" id="txtProductName">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" placeholder="category type" id="txtProductName">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="tinymce-single nt-mg-b-30">
                                        <div class="alert-title">
                                            <h2>Basic Summernote WYSIWYG editor</h2>
                                            <p>The fastest way to get Summernote WYSIWYG editor is powerfull JavaScript plugin. you can easily maintance typography system.</p>
                                        </div>
                                        <div id="summernote">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" placeholder="keyword" id="txtKeywords">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" placeholder="price" id="txtPrice">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <input type="checkbox" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group ic-cmp-int">
                                    <div class="nk-int-st">
                                        <button class="btn notika-btn-green btn-reco-mg btn-button-mg waves-effect" id="btnAddCategory">add this!</button>
                                        <button class="btn notika btn-reco-mg btn-button-mg waves-effect" id="btnClearForm">clear form</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section styles
    {
<!-- summernote CSS
============================================ -->
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
<link rel="stylesheet" href="@Url.Content("~/Content/css/summernote/summernote.css")">
    }
@section scripts
    {
<!-- summernote JS
============================================ -->
<script src="@Url.Content("~/Content/js/summernote/summernote.min.js")"></script>
<script src="@Url.Content("~/Content/js/summernote/summernote-active.js")"></script>
    <script type="text/javascript">
        $(function ()
        {
            $("#summernote").summernote()
        });
    </script>
    }