
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="page-breadcrumb__menu ForceRTL">
                    <li class="page-breadcrumb__nav"><a href="@Url.Action("Index")">خانه</a></li>
                    <li class="page-breadcrumb__nav active">ثبت نام </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- login area start -->
            <div class="login-register-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                            <div class="login-register-wrapper">
                                <div class="login-register-tab-list nav">
                                    <a class="active" data-toggle="tab" href="#lg1">
                                        <h4>ورود</h4>
                                    </a>
                                    <a data-toggle="tab" href="#lg2">
                                        <h4>ثبت نام</h4>
                                    </a>
                                </div>
                                <div class="tab-content" style="text-align:right;">
                                    <div id="lg1" class="tab-pane active">
                                        <div class="login-form-container">
                                            <div class="login-register-form">
                                                @using (Html.BeginForm("SubmitLogin", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "LoginForm" }))
                                                {
                                                <form action="#" method="post">
                                                    <div class="form-box__single-group">
                                                        <input type="text" id="User_Username" name="User.Username" placeholder="نام کاربری">
                                                    </div>
                                                    <div class="form-box__single-group">
                                                        <input type="password" id="User_Password" name="User.Password" placeholder="رمز عبور">
                                                    </div>
                                                    <div class="d-flex justify-content-between flex-wrap m-tb-20">
                                                        <label for="account-remember">
                                                            <input type="checkbox" id="UserRemember">
                                                            <span>مرا به خاطر بسپار</span>
                                                        </label>
                                                        <a class="link--gray" href="">بازیابی رمز عبور</a>
                                                    </div>
                                                    <button class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" id="btnLogin" type="submit">ورود</button>
                                                </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div id="lg2" class="tab-pane">
                                        <div class="login-form-container">
                                            <div class="login-register-form">
                                               @using (Html.BeginForm("SubmitRegister", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "RegisterForm" }))
                                               {
                                                <form action="#" method="post">
                                                    <div class="form-box__single-group">
                                                        <input type="text" id="User_FirstName" name="User.FirstName" placeholder="نام" required>
                                                    </div>
                                                    <div class="form-box__single-group">
                                                        <input type="text" id="User_Lastname" name="User.LastName" placeholder="نام خانوادگی" required>
                                                    </div>
                                                    <div class="form-box__single-group">
                                                        <input type="email" id="User.Username" name="User.Username" placeholder="ایمیل" required>
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <input type="password" id="User_Password" name="User.Paswword" placeholder="رمز عبور" required>
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <input type="password" id="User_Password2" name="User.Password2" placeholder="تکرار رمز عبور" required>
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <input type="number" id="User_ZipCode" name="User.ZipCode" placeholder="کد پستی" maxlength="10">
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <textarea id="User_Address" name="User.Address" placeholder="آدرس" rows="4"></textarea>
                                                    </div>
                                                    <button class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" id="btnRegister" type="submit">ثبت نام</button>
                                                </form>
                                               }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- login area end -->
        </div>
    </div>
</div>


@section scripts
    {
    <script type="text/javascript">
        $(function ()
        {
            $("#btnLogin").click(function ()
            {
                if ($("#UserRemember").checked == true)
                {
                    alert('fired');
                    $("#UserRemember").val(true);
                } else
                {
                    $("#UserRemember").val(false);
                }
            });
        });
    </script>
    }